for dir in $(echo */)
do
    if [ -f ${dir}.env ]
    then
        cp -v -n ${dir}.env.example $dir/.env
    fi
done
echo Building... \
&& cd prisma \
    && pnpm install \
    && pnpm prisma db push \
    && pnpm build \
&& cd enums \
    && pnpm install \
    && pnpm build \
&& cd ../.. \
&& cd contract \
    && pnpm install \
    && pnpm build \
&& cd .. \
&& cd backend \
    && pnpm install \
    && pnpm build \
&& cd .. \
&& cd frontend \
    && pnpm install \
    && pnpm build \
&& cd .. \
